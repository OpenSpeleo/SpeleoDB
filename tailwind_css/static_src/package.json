{
    "name": "speleodb",
    "scripts": {
        "start": "npm run dev",
        "build": "npm run build:clean && npm run build:tailwind:public && npm run build:tailwind:private",
        "build:clean": "rimraf ../../frontend_public/static/css/style.css ../../frontend_private/static/private/css/style.css",
        "build:tailwind:public": "tailwindcss -c ./src/public/tailwind.config.js -i ./src/public/style.css -o ../../frontend_public/static/css/style.css --minify",
        "build:tailwind:private": "tailwindcss -c ./src/private/tailwind.config.js -i ./src/private/style.css -o ../../frontend_private/static/private/css/style.css --minify",
        "dev": "concurrently -k \"npm run dev:public\" \"npm run dev:private\"",
        "dev:public": "tailwindcss -c ./src/public/tailwind.config.js -i ./src/public/style.css -o ../../frontend_public/static/css/style.css -w",
        "dev:private": "tailwindcss -c ./src/private/tailwind.config.js -i ./src/private/style.css -o ../../frontend_private/static/private/css/style.css -w",
        "pre-commit": "npm run build:clean && npm run pre-commit:public && npm run pre-commit:private",
        "pre-commit:public": "tailwindcss -c ./src/public/tailwind.config.js -i ./src/public/style.css -o ../../frontend_public/static/css/style.css",
        "pre-commit:private": "tailwindcss -c ./src/private/tailwind.config.js -i ./src/private/style.css -o ../../frontend_private/static/private/css/style.css"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.6",
        "@tailwindcss/typography": "^0.5.10",
        "concurrently": "^9.2.1",
        "cross-env": "^7.0.3",
        "rimraf": "^6.0.1",
        "tailwindcss": "^3.4.19"
    }
}