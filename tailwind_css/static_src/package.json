{
    "name": "speleodb",
    "scripts": {
        "start": "npm run dev",
        "build": "npm run build:clean && npm run build:tailwind:public && npm run build:tailwind:private && npm run build:esbuild",
        "build:clean": "rimraf ../../frontend_public/static/css/style.css ../../frontend_private/static/private/css/style.css ../../frontend_private/static/private/js/dist/ ../../frontend_public/static/js/dist/",
        "build:tailwind:public": "tailwindcss -c ./src/public/tailwind.config.js -i ./src/public/style.css -o ../../frontend_public/static/css/style.css --minify",
        "build:tailwind:private": "tailwindcss -c ./src/private/tailwind.config.js -i ./src/private/style.css -o ../../frontend_private/static/private/css/style.css --minify",
        "build:esbuild": "npm run build:esbuild:private && npm run build:esbuild:public",
        "build:esbuild:private": "esbuild ../../frontend_private/static/private/js/map_viewer/main.js --bundle --minify --outfile=../../frontend_private/static/private/js/dist/map_viewer.bundle.js",
        "build:esbuild:public": "esbuild ../../frontend_public/static/js/gis_view_main.js --bundle --minify --outfile=../../frontend_public/static/js/dist/gis_view.bundle.js",
        "dev": "concurrently -k \"npm run dev:tailwind:public\" \"npm run dev:tailwind:private\" \"npm run dev:esbuild:private\" \"npm run dev:esbuild:public\"",
        "dev:tailwind:public": "tailwindcss -c ./src/public/tailwind.config.js -i ./src/public/style.css -o ../../frontend_public/static/css/style.css -w",
        "dev:tailwind:private": "tailwindcss -c ./src/private/tailwind.config.js -i ./src/private/style.css -o ../../frontend_private/static/private/css/style.css -w",
        "dev:esbuild:private": "esbuild ../../frontend_private/static/private/js/map_viewer/main.js --bundle --sourcemap --outfile=../../frontend_private/static/private/js/dist/map_viewer.bundle.js --watch",
        "dev:esbuild:public": "esbuild ../../frontend_public/static/js/gis_view_main.js --bundle --sourcemap --outfile=../../frontend_public/static/js/dist/gis_view.bundle.js --watch",
        "pre-commit": "npm run build:clean && npm run pre-commit:tailwind:public && npm run pre-commit:tailwind:private && npm run pre-commit:esbuild",
        "pre-commit:tailwind:public": "tailwindcss -c ./src/public/tailwind.config.js -i ./src/public/style.css -o ../../frontend_public/static/css/style.css",
        "pre-commit:tailwind:private": "tailwindcss -c ./src/private/tailwind.config.js -i ./src/private/style.css -o ../../frontend_private/static/private/css/style.css",
        "pre-commit:esbuild": "npm run pre-commit:esbuild:private && npm run pre-commit:esbuild:public",
        "pre-commit:esbuild:private": "esbuild ../../frontend_private/static/private/js/map_viewer/main.js --bundle --outfile=../../frontend_private/static/private/js/dist/map_viewer.bundle.js",
        "pre-commit:esbuild:public": "esbuild ../../frontend_public/static/js/gis_view_main.js --bundle --outfile=../../frontend_public/static/js/dist/gis_view.bundle.js",
        "update": "ncu --target minor -u && npm install && npx update-browserslist-db@latest"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.11",
        "@tailwindcss/typography": "^0.5.19",
        "concurrently": "^9.2.1",
        "cross-env": "^7.0.3",
        "esbuild": "^0.27.3",
        "npm-check-updates": "^17.1.18",
        "rimraf": "^6.1.2",
        "tailwindcss": "^3.4.19"
    }
}
